@model List<MVCCIMotorsForms.Models.CustomerClass>
@{
    ViewBag.Title = "Customer Management";
}

<h2>Customer Management</h2>
<table>
    <tr>
        <td><h3><a href="/Customer/EditCustomer?customerId=0">Add Customer</a></h3></td>
      <td></td>

    </tr>
</table>

<table class="table table-bordered table-striped">

    <tr>
        <td>Customer Id</td>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address 1</th>
        <th>Suburb</th>
        <th>Address 2</th>
        <th>Phone</th>
        <th>&nbsp</th>
    </tr>
    @foreach (var sm in Model)
    {
        <tr>
            <td>@sm.PersonId</td>
            <td>@sm.FirstName</td>
            <td>@sm.LastName</td>
            <td>@sm.Address1</td>
            <td>@sm.Suburb</td>
            <td>@sm.Address2</td>
            <td>@sm.PhoneNumber</td>
            <td><a href="/Customer/EditCustomer?customerId=@sm.PersonId">Edit</a></td>
        </tr>
    }
</table>

