@model List<MVCCIMotorsForms.Models.StaffClass>
@{
    ViewBag.Title = "Staff Management";
}

<h2>Staff Management</h2>
<h3><a href="/Staff/EditStaffMember?staffId=0">Add Staff</a></h3>

<table class="table table-bordered table-striped">

    <tr>
        <td>Staff Id</td>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address 1</th>  
        <th>Suburb</th> 
        <th>Address 2</th>
        <th>Phone Number</th>
        <th>Staff Type</th>
        <th>&nbsp</th>
    </tr>
    @foreach (var sm in Model)
    {
        <tr>
            <td>@sm.PersonId</td>
            <td>@sm.FirstName</td>
            <td>@sm.LastName</td>
            <td>@sm.Address1</td>
            <td>@sm.Suburb</td>
            <td>@sm.Address2</td>
            <td>@sm.PhoneNumber</td>
            <td>@sm.PersonType</td>

            <td><a href="/Staff/EditStaffMember?staffId=@sm.PersonId">Edit</a></td>
        </tr>
    }
</table>
